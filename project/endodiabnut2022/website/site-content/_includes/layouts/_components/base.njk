<script>
    // Data for overlapping control
    const headerInfoLarge = document.getElementById('header-info-large')
    const headerInfoSmall = document.getElementById('header-info-small')

	// Trigger Burger menu
    const toggleButton = document.getElementsByClassName('toggle')[0]
    const navbarLinks = document.getElementsByClassName('navbar-links')[0]
    
    toggleButton.addEventListener('click', () => {
        navbarLinks.classList.toggle('hidden')
    })

    // Shrink header when elements overlap
    function checkScroll(){
        const scrollValue = document.documentElement.scrollTop

        if ( scrollValue > 0) {
            if (!headerInfoLarge.classList.contains('scrolled')) {
                document.documentElement.scrollTop = scrollValue + 15

                headerInfoLarge.classList.add('scrolled')
                headerInfoLarge.classList.remove('animation-effect-in')
                headerInfoLarge.classList.add('animation-effect-out')
                headerInfoLarge.style.height = '0';
                headerInfoSmall.classList.remove('hidden')
                headerInfoSmall.classList.add('animation-effect-in')
            }
        }  else {
            headerInfoLarge.classList.remove('scrolled')
            headerInfoSmall.classList.add('hidden')
            headerInfoLarge.classList.remove('hidden')
            headerInfoLarge.classList.add('animation-effect-in')
            headerInfoLarge.classList.remove('animation-effect-out')
            headerInfoLarge.style.height = '100%'
        }
    }

    document.addEventListener('scroll', (e) => checkScroll())

</script>

